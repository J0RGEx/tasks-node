doctype html
html(lang="es")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
         
        title 
            block title 
            | - NodeJS
        //- link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css")
        link(rel="stylesheet", href="https://bootswatch.com/5/darkly/bootstrap.min.css")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js") 
        link(rel="stylesheet", href="/css/app.css")
        link(rel="stylesheet", href="/css/normalize.css")
        link(rel="shortcut icon", href="/node.png", type="image/x-icon")
        

    body
        main#app
            .bg-dark.p-3
                .d-flex.justify-content-between.text-light.align-items-center#content
                    div
                        a(href="/")
                            h4 Administración de Proyectos
                    div
                        a(href="#" class="text-light text-decoration-none") Cerrar sesión
            .d-flex#content.pt-2 
                aside.sidebar.p-3
                    a(href="/proyectos/create" class="btn btn-warning py-2")
                        svg(class="w-6 h-6 mx-2" fill="none" stroke="currentColor" width="25px" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg")
                            path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z")
                        span Nuevo proyecto
                    //- h6 PROYECTOS

                    ul.proyectos
                        if(proyectos)
                            each proyecto in proyectos
                                a(href=`/proyectos/${proyecto.url}`)
                                    li= proyecto.name 
                .content
                    block content
        script(src="/dist/bundle.js") 