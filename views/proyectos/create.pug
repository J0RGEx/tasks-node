extends ../layouts/main

block title
    | Agregar proyecto 

block content 
    h4.mb-3 Agregar Proyecto
    if errors
        each error in errors
            .alert.alert-danger #{error.msg}
    
    form(action="/proyectos/store/" method="POST")
        .form-group.mb-3 
            label(for="name") Nombre del proyecto
            input#name.form-control(type="text" name="name")

        div 
            button.btn.btn-primary Guardar proyecto 